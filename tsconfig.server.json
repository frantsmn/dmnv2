{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./server-dist",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@domain": ["./domain/index.ts"]
    }
  },
  "exclude": [
    "node_modules/**/*",
    "src/**/*",
  ],
  "include": [
    "server/**/*",
    "domain/**/*",
  ]
}
